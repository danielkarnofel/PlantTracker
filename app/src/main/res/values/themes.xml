<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlantTracker" parent="Theme.Material3.DayNight">
        <item name="android:backgroundTint">@color/primary_light</item>
    </style>

    <style name="Theme.PlantTracker" parent="Base.Theme.PlantTracker" />

    <style name="light_level_radio_style">
        <item name="android:text">@null</item> <!-- To remove the default radio button text -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Currently this is not being used -->
    <style name="light_level_radio_style_alt">
        <item name="android:button">@null
        </item> <!-- To remove the default radio button indicator -->
        <item name="android:text">@null</item> <!-- To remove the default radio button text -->
        <item name="android:drawableStart">@drawable/light_level_shape</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="recycler_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/large_gap</item>
        <item name="android:background">@color/secondary_light</item>
        <item name="android:backgroundTint">@color/secondary_light</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_recycler_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/large_gap</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:background">@color/secondary_light</item>
        <item name="android:backgroundTint">@color/secondary_light</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="recycler_view_style">
        <item name="android:layout_marginTop">@dimen/large_gap</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/large_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="user_recycler_view_style">
        <item name="android:layout_marginTop">@dimen/large_gap</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/large_padding</item>
    </style>


    <style name="button_style">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="danger_button_style">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="water_button_style">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_recycler_button_style">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_recycler_danger_button_style">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text Styles-->
    <style name="title_style">
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="large_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="small_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_field_style">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>